<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
         <!-- Price list -->
        <record id="new_customer_discount" model="product.pricelist">
            <field name="name">New Customer</field>
            <field name="item_ids">new_customer_discount_item</field>
            <field name="currency_id">33</field>
        </record>
        <record id="new_customer_discount_item" model="product.pricelist.item">
            <field name="pricelist_id" ref="new_customer_discount"/>
            <field name="compute_price">formula</field>
            <field name="price_surcharge">-2500.0</field>
            <field name="min_quantity">1.0</field>
            <field name="max_quantity">1.0</field>
        </record>
    </data>
</odoo>